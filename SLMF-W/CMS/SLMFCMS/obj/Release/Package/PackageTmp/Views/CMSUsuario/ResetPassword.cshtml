@model SLMFCMS.Models.CMS.CMSResetPass
@{
    ViewBag.Title = "Cambiar el Password";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div id="row-header-index" class="row">
                <div id="div-titulo" class="col-md-7">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="col-md-3">
                    &nbsp;
                </div>
                <div class="col-md-1">
                    <button class="btn btn-save" type="submit" title="Guardar">Guardar</button>
                </div>
                <div id="div-search" class="col-md-1">
                    @Html.ActionLink("Cancelar", "Index", "CMSUsuario", routeValues: new { pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "btn btn-cancel", @title = "Cancelar" })
                </div>
            </div>
        </div>
    </div>
    <hr id="header-divisor" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="col-md-4">
                &nbsp;
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12 lbltitulo">
                        @Html.LabelFor(model => model.Password)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 margen-off">
                        @Html.PasswordFor(model => model.Password, new { @class = "txt-box-input-col2-row1" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 lbltitulo">
                        @Html.LabelFor(model => model.ConfirmPassword)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 margen-off">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "txt-box-input-col2-row1" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}