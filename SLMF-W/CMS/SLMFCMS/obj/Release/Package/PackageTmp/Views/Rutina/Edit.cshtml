@model SLMFCMS.Models.Rutina
@{
    ViewBag.Title = "Editar la Rutina";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div id="row-header-index" class="row">
                <div id="div-titulo" class="col-md-7">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="col-md-3">
                    &nbsp;
                </div>
                <div class="col-md-1">
                    <button class="btn btn-save" type="submit" title="Guardar">Guardar</button>
                </div>
                <div id="div-search" class="col-md-1">
                    @Html.ActionLink("Cancelar", "Index", "Rutina", routeValues: new { pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "btn btn-cancel", @title = "Cancelar" })
                </div>
            </div>
        </div>
    </div>
    <hr id="header-divisor" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-md-2 lbltitulo">
                @Html.LabelFor(model => model.GrupoMusculosID)
            </div>
            <div class="col-md-2 lbltitulo">
                @Html.LabelFor(model => model.Nombre)
            </div>
            <div class="col-md-6 lbltitulo">
                @Html.LabelFor(model => model.Descripcion)
            </div>
            <div class="col-md-2 lbltitulo" style="margin-bottom:5px; text-align: right;">
                @Html.Label("Descanso Pasivo")
                @Html.EditorFor(model => model.Inactividad)
            </div>
        </div>
        <div class="row">
            <div id="selector-table-1" class="col-md-2 margen-off">
                @Html.DropDownList("GrupoMusculosID")
            </div>
            <div class="col-md-2 margen-off">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "txt-box-input-col2-row1" })
            </div>
            <div class="col-md-8 margen-off">
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "txt-area-input-col8-row4" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.GrupoMusculosID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}