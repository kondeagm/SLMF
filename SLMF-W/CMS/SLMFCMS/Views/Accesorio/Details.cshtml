@model SLMFCMS.Models.Accesorio
@using System.Web.Helpers
@{
    ViewBag.Title = "Detalles del Accesorio del Ejercicio";
}
<div class="row">
    <div class="col-md-12">
        <div id="row-header-index" class="row">
            <div id="div-titulo" class="col-md-7">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-md-4">
                &nbsp;
            </div>
            <div id="div-search" class="col-md-1">
                @Html.ActionLink(" ", "Index", "Accesorio", routeValues: new { pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "fa fa-arrow-left fa-2x btn-accion-inv", @title = "Regresar" })
            </div>
        </div>
    </div>
</div>
<hr id="header-divisor" />
<div class="row">
    <div class="col-md-1 lbltitulo">
        @Html.LabelFor(model => model.Abreviacion)
    </div>
    <div class="col-md-2 lbltitulo">
        @Html.LabelFor(model => model.Nombre)
    </div>
</div>

<div class="row">
    <div class="col-md-1 txt-area-display-with-border area-border-1">
        @Html.DisplayFor(model => model.Abreviacion)
    </div>
    <div class="col-md-2 txt-area-display-with-border area-border-2">
        @Html.DisplayFor(model => model.Nombre)
    </div>
</div>
