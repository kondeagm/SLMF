@model SLMFCMS.Models.ContenidoEstatico
@{
    ViewBag.Title = "Editar el Contenido Estatico de la Red Social";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div id="row-header-index" class="row">
                <div id="div-titulo" class="col-md-7">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="col-md-3">
                    &nbsp;
                </div>
                <div class="col-md-1">
                    <button class="btn btn-save" type="submit" title="Guardar">Guardar</button>
                </div>
                <div id="div-search" class="col-md-1">
                    @Html.ActionLink("Cancelar", "Details", "RedSocial", routeValues: new { id = Model.RedSocialID, pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "btn btn-cancel", @title = "Cancelar" })
                </div>
            </div>
        </div>
    </div>
    <hr id="header-divisor" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.RedSocialID)
        <div class="row">
            <div class="col-md-2 lbltitulo">
                @Html.LabelFor(model => model.RedSocialID)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 txt-area-display-with-border area-border-2">
                @Html.Label(Model.RedSocial.Nombre)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 lbltitulo">
                @Html.LabelFor(model => model.Identificador)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 margen-off">
                @Html.TextBoxFor(model => model.Identificador, new { @class = "txt-box-input-col2-row1" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationMessageFor(model => model.Identificador, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}