@model SLMFCMS.Models.Disciplina
@using System.Web.Helpers
@using SLMFCMS.App_Code
@using System.Configuration;
@{
    ViewBag.Title = "Detalles de la Disciplina";
}
@{string sRutaImages = ConfigurationManager.AppSettings["App_FolderAssetsImages"];
string sFileImage = "";}
<div class="row">
    <div class="col-md-12">
        <div id="row-header-index" class="row">
            <div id="div-titulo" class="col-md-7">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-md-4">
                &nbsp;
            </div>
            <div id="div-search" class="col-md-1">
                @Html.ActionLink(" ", "Index", "Disciplina", routeValues: new { pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "fa fa-arrow-left fa-2x btn-accion-inv", @title = "Regresar" })
            </div>
        </div>
    </div>
</div>
<hr id="header-divisor" />
<div class="row">
    <div class="col-md-1 lbltitulo">
        @Html.LabelFor(model => model.Siglas)
    </div>
    <div class="col-md-3 lbltitulo">
        @Html.LabelFor(model => model.Nombre)
    </div>
    <div class="col-md-6 lbltitulo">
        @Html.LabelFor(model => model.Slogan)
    </div>
    <div class="col-md-2 lbltitulo">
        @Html.LabelFor(model => model.ColorCode)
    </div>
</div>
<div class="row">
    <div class="col-md-1 txt-area-display-with-border area-border-1">
        @Html.DisplayFor(model => model.Siglas)
    </div>
    <div class="col-md-3 txt-area-display-with-border area-border-3">
        @Html.DisplayFor(model => model.Nombre)
    </div>
    <div class="col-md-6 txt-area-display-with-border area-border-6">
        @Html.DisplayFor(model => model.Slogan)
    </div>
    <div class="col-md-2 txt-area-display-with-border area-border-2 txt-center">
        @Html.Label(Model.ColorCode, htmlAttributes: new { @style = "color: black; font-weight: normal; width: 66px; background-color: " + Model.ColorCode + ";" })
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-md-8 lbltitulo">
        @Html.LabelFor(model => model.Proposito)
    </div>
</div>
<div class="row">
    <div class="col-md-8 txt-area-display-with-border area-border-8">
        @Html.DisplayFor(model => model.Proposito)
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table webGrid">
            <tr class="webGridHeader">
                <th class="txt-center">
                    Portada
                </th>
                <th class="txt-center">
                    Icono
                </th>
                <th class="txt-center">
                    Siglas
                </th>
                <th class="txt-center">
                    Logo
                </th>
                <th class="txt-center">
                    Entrenar
                </th>
            </tr>
            <tr>
                <td class="celda-imagen">
                    <div>
                        @if (!String.IsNullOrEmpty(Model.FileImage))
                        {
                            sFileImage = sRutaImages + Model.FileImage;
                            <a href="@sFileImage.Replace("~/","../../")" data-lightbox="image-1">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-portada" })
                            </a>
                            @Html.ActionLink(" ", "DeleteImage", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-trash fa-2x btn-accion-img", @title = "Eliminar Portada" })
                        }
                        else
                        {
                            sFileImage = "/Content/img/SLMF-Portada-SN.jpg";
                            <a href="@sFileImage" data-lightbox="image-1">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-portada" })
                            </a>
                            @Html.ActionLink(" ", "AddImage", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-file-image-o fa-2x btn-accion-img", @title = "Agregar Portada" })
                        }
                    </div>
                </td>
                <td class="celda-logo">
                    <div>
                        @if (!String.IsNullOrEmpty(Model.IconImage))
                        {
                            sFileImage = sRutaImages + Model.IconImage;
                            <a href="@sFileImage.Replace("~/","../../")" data-lightbox="image-2">
                                @Html.Image(sFileImage, "Icono", new { @class = "image-preview-icon" })
                            </a>
                            @Html.ActionLink(" ", "DeleteIcon", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-trash fa-2x btn-accion-img", @title = "Eliminar Icono" })
                        }
                        else
                        {
                            sFileImage = "/Content/img/SLMF-Icono-SN.png";
                            <a href="@sFileImage" data-lightbox="image-2">
                                @Html.Image(sFileImage, "Icono", new { @class = "image-preview-icon-none" })
                            </a>
                            @Html.ActionLink(" ", "AddIcon", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-file-image-o fa-2x btn-accion-img", @title = "Agregar Icono" })
                        }
                    </div>
                </td>
                <td class="celda-logo">
                    <div>
                        @if (!String.IsNullOrEmpty(Model.SiglasImage))
                        {
                            sFileImage = sRutaImages + Model.SiglasImage;
                            <a href="@sFileImage.Replace("~/","../../")" data-lightbox="image-3">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-siglas" })
                            </a>
                            @Html.ActionLink(" ", "DeleteAcronym", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-trash fa-2x btn-accion-img", @title = "Eliminar Siglas" })
                        }
                        else
                        {
                            sFileImage = "/Content/img/SLMF-Siglas-SN.png";
                            <a href="@sFileImage" data-lightbox="image-3">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-siglas-none" })
                            </a>
                            @Html.ActionLink(" ", "AddAcronym", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-file-image-o fa-2x btn-accion-img", @title = "Agregar Siglas" })
                        }
                    </div>
                </td>
                <td class="celda-logo">
                    <div>
                        @if (!String.IsNullOrEmpty(Model.LogoSVG))
                        {
                            <div class="image-preview-logo">
                                @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.LogoSVG))
                            </div>
                        }
                        else
                        {
                            <div class="image-preview-logo-none">
                                <p>Aun no captura el código SVG del Logotipo</p>
                            </div>
                        }
                    </div>
                </td>
                <td class="celda-imagen">
                    <div>
                        @if (!String.IsNullOrEmpty(Model.ImageEntrenar))
                        {
                            sFileImage = sRutaImages + Model.ImageEntrenar;
                            <a href="@sFileImage.Replace("~/","../../")" data-lightbox="image-5">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-portada" })
                            </a>
                            @Html.ActionLink(" ", "DeleteImageTraining", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-trash fa-2x btn-accion-img", @title = "Eliminar Imagen" })
                        }
                        else
                        {
                            sFileImage = "/Content/img/SLMF-Entrenar-SN.jpg";
                            <a href="@sFileImage" data-lightbox="image-5">
                                @Html.Image(sFileImage, "Imagen", new { @class = "image-preview-portada" })
                            </a>
                            @Html.ActionLink(" ", "AddImageTraining", "Disciplina", routeValues: new { id = Model.ID }, htmlAttributes: new { @class = "fa fa-file-image-o fa-2x btn-accion-img", @title = "Agregar Imagen" })
                        }
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
@section LocalScript {
    @Scripts.Render("~/bundles/lightbox")
}