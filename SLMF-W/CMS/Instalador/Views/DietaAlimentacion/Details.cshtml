@model SLMFCMS.Models.DietaAlimentacion
@using System.Web.Helpers
@{
    ViewBag.Title = "Detalle del Alimento de la Comida en la Dieta";
}

<div class="row">
    <div class="col-md-12">
        <div id="row-header-index" class="row">
            <div id="div-titulo" class="col-md-7">
                <h4>@ViewBag.Title</h4>
            </div>
            <div class="col-md-4">
                &nbsp;
            </div>
            <div id="div-search" class="col-md-1">
                @Html.ActionLink(" ", "Details", "DietaTempos", routeValues: new { id = Model.DietaTemposID, pagina = ViewBag.Pagina }, htmlAttributes: new { @class = "fa fa-arrow-left fa-2x btn-accion-inv", @title = "Regresar" })
            </div>
        </div>
    </div>
</div>
<hr id="header-divisor" />
<div class="row">
    <div class="col-md-3 lbltitulo">
        @Html.LabelFor(model => model.DietaTempos.DietaID)
    </div>
    <div class="col-md-2 lbltitulo">
        @Html.LabelFor(model => model.DietaTempos.ID)
    </div>
    <div class="col-md-1 lbltitulo">
        @Html.LabelFor(model => model.DietaTempos.Hora)
    </div>
</div>
<div class="row">
    <div class="col-md-3 txt-area-display-with-border area-border-3">
        @Html.DisplayFor(model => model.DietaTempos.Dieta.Nombre)
    </div>
    <div class="col-md-2 txt-area-display-with-border area-border-2">
        @Html.DisplayFor(model => model.DietaTempos.Tempo.NombreCompleto)
    </div>
    <div class="col-md-1 txt-area-display-with-border area-border-1">
        @if (String.IsNullOrEmpty(Convert.ToString(Model.DietaTempos.Hora)))
        {
            @Html.Label("")
        }
        else
        {
            if (Model.DietaTempos.Hora < 10)
            {
                @Html.Label("0", htmlAttributes: new { @style = "font-weight: normal;" })
            }
            @Html.DisplayFor(model => model.DietaTempos.Hora)
            @Html.Label(":00 hrs", htmlAttributes: new { @style = "font-weight: normal;" })
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-md-1 lbltitulo">
        @Html.LabelFor(model => model.Cantidad)
    </div>
    <div class="col-md-2 lbltitulo">
        @Html.LabelFor(model => model.PorcionID)
    </div>
    <div class="col-md-4 lbltitulo">
        @Html.LabelFor(model => model.AlimentoID)
    </div>
</div>
<div class="row">
    <div class="col-md-1 txt-area-display-with-border area-border-1">
        @Html.DisplayFor(model => model.Cantidad)
    </div>
    <div class="col-md-2 txt-area-display-with-border area-border-2">
        @Html.DisplayFor(model => model.PorcionDelAlimento.Descripcion)
    </div>
    <div class="col-md-4 txt-area-display-with-border area-border-4">
        @Html.DisplayFor(model => model.Alimento.Nombre)
    </div>
</div>
